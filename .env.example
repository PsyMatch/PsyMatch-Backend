# =================================
# PSYMATCH BACKEND - ENVIRONMENT VARIABLES
# =================================

# =================================
# APPLICATION SETTINGS
# =================================
ENVIRONMENT=development
PORT=3000
HOST=localhost

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=psymatch_db
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here
DB_SSL=false

# =================================
# JWT AUTHENTICATION
# =================================
JWT_SECRET=your_super_secret_jwt_key_here_min_32_characters

# =================================
# CLOUDINARY CONFIGURATION
# =================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =================================
# GOOGLE OAUTH CONFIGURATION
# =================================
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# =================================
# DEVELOPMENT NOTES
# =================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit the .env file to version control
# 3. For production, use environment-specific values
# 4. JWT_SECRET should be at least 32 characters long
# 5. Database credentials should be secure in production
# 6. Cloudinary credentials are required for file uploads
# 7. Google OAuth is optional but required for social login
